doctype html
html
    head
        block title
            title SimpleShop
        meta(charset='UTF-8')
        block styles
            link(rel='stylesheet', href='#{root}/webjars/bootstrap/3.3.6/css/bootstrap.min.css')
        block scripts
            script(type='text/javascript', src='#{root}/webjars/bootstrap/3.3.6/js/bootstrap.min.js')
    body(data-context-root='#{root}')
        .content
block content
    .container
        nav.navbar.navbar-inverse
            .container-fluid
                .navbar-header
                    .navbar-brand SimpleShop
                .navbar-collapse.collapse
                    ul.nav.navbar-nav
                        li: a(href='#{root}/Products') Products
                        li: a(href='#{root}/Orders') Orders
                        li: a(href='#{root}/Categories') Categories
        block page-content